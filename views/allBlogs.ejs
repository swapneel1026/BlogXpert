<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <title>All Blogs</title>
  </head>
  <body>
    <%- include("./partials/nav.ejs") %> <%- include('./partials/scripts.ejs')
    %>
    <div class="d-flex justify-content-between px-4">
      <h1>All Blogs</h1>
      <div>
        <a class="btn btn-primary" href="/blog/addnew">Add new Blog</a>
      </div>
    </div>

    <% if (locals.allBlogs) { %>

    <div class="mt-3 row row-cols-4 mx-auto">
      <% allBlogs.forEach(blog => { %>
      <div class="col">
        <div class="card" style="width: 20rem">
          <img
            src="<%= blog.blogPhotoUrl %>"
            class="card-img-top"
            alt="..."
            width="200"
            height="200"
          />
          <div class="card-body">
            <h5 class="card-title text-truncate"><%= blog.title %></h5>
            <p class="card-text text-truncate"><%= blog.content %></p>
            <a href="/blog/allblogs/<%= blog.id %>" class="btn btn-primary"
              >View more</a
            >
          </div>
        </div>
      </div>
      <% }) %>
    </div>
    <% } %>
  </body>
</html>
